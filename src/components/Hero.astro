---
import { Image } from "astro:assets";
import productHuntLogo from "../assets/producthunt-logo.png";
import trustpilotLogo from "../assets/trustpilot-logo.png";
import heroImage from "../assets/hero-image.png";
---

<div class="container mx-auto px-6 py-20 lg:py-32 text-center relative z-10">
  <div class="flex justify-center items-center gap-4 mb-4">
    <div
      class="flex items-center gap-2 bg-white dark:bg-slate-800 border border-slate-200 dark:border-slate-700 rounded-full px-3 py-1"
    >
      <Image
        alt="ProductHunt logo"
        class="w-5 h-5"
        src={productHuntLogo}
      />
      <span class="text-sm font-medium text-slate-700 dark:text-slate-200"
        >ProductHunt</span
      >
    </div>
    <div class="flex items-center gap-1">
      <Image alt="Trustpilot logo" class="h-6" src={trustpilotLogo} />
      <div class="flex text-yellow-400">
        <span class="material-symbols-outlined text-base">star</span>
        <span class="material-symbols-outlined text-base">star</span>
        <span class="material-symbols-outlined text-base">star</span>
        <span class="material-symbols-outlined text-base">star</span>
        <span class="material-symbols-outlined text-base">star</span>
      </div>
    </div>
  </div>
  <h1
    class="text-4xl md:text-6xl lg:text-7xl font-bold font-display text-slate-900 dark:text-white mb-6 tracking-tighter"
  >
    <span class="text-primary">#1</span> Email Verification Tool
  </h1>
  <p class="max-w-2xl mx-auto text-lg lg:text-xl text-slate-600 dark:text-slate-400 mb-10">
    Clean your email list in seconds. Protect your reputation and make sure your
    messages reach real people.
  </p>
  <div class="flex justify-center items-center gap-4 mb-6">
    <a
      class="bg-primary text-white px-8 py-3.5 rounded-lg font-semibold hover:opacity-90 transition-opacity shadow-lg shadow-primary/30 flex items-center gap-2"
      href="#"
    >
      Try It Free
      <span class="material-symbols-outlined">arrow_forward</span>
    </a>
  </div>
  <p class="text-sm text-slate-500 dark:text-slate-400">
    Get 100 free verifications - no setup, no credit card, no stress.
  </p>
  <div class="mt-20 lg:mt-28 relative max-w-4xl mx-auto">
    <div class="relative">
      <div
        class="absolute -inset-2 bg-gradient-to-br from-indigo-200 via-pink-200 to-yellow-200 dark:from-indigo-900 dark:via-pink-900 dark:to-yellow-900 rounded-xl opacity-30 blur-2xl"
      >
      </div>
      <Image
        alt="Portrait of a smiling man"
        class="relative z-10 rounded-2xl shadow-2xl shadow-slate-900/10 dark:shadow-slate-900/30"
        src={heroImage}
      />
    </div>
    <div
      class="absolute z-20 -top-8 -left-8 lg:-left-20 animate-float-slow hidden md:block"
    >
      <div class="glass-card p-4 rounded-xl shadow-xl">
        <div class="flex items-center gap-3">
          <div class="relative w-16 h-16">
            <svg class="w-full h-full" viewBox="0 0 36 36"
              ><path
                class="text-slate-200 dark:text-slate-700"
                d="M18 2.0845 a 15.9155 15.9155 0 0 1 0 31.831 a 15.9155 15.9155 0 0 1 0 -31.831"
                fill="none"
                stroke="currentColor"
                stroke-width="3"></path><path
                class="text-primary"
                d="M18 2.0845 a 15.9155 15.9155 0 0 1 0 31.831 a 15.9155 15.9155 0 0 1 0 -31.831"
                fill="none"
                stroke="currentColor"
                stroke-dasharray="98, 100"
                stroke-linecap="round"
                stroke-width="3"></path></svg
            >
            <span
              class="absolute inset-0 flex items-center justify-center text-xl font-bold text-slate-800 dark:text-white"
              >98%</span
            >
          </div>
          <div>
            <p class="font-semibold text-slate-800 dark:text-white">
              Bounce Reduction
            </p>
            <p class="text-xs text-slate-500 dark:text-slate-400">
              98% - 46,080
            </p>
          </div>
        </div>
      </div>
    </div>
    <div class="absolute z-20 -top-4 right-0 lg:right-12 animate-float-normal">
      <div class="glass-card p-4 rounded-xl shadow-xl flex items-center gap-3">
        <div
          class="w-10 h-10 flex items-center justify-center bg-green-100 dark:bg-green-900/50 rounded-lg"
        >
          <span class="text-xl font-bold text-green-600 dark:text-green-400"
            >15%</span
          >
        </div>
        <div>
          <p class="font-semibold text-slate-800 dark:text-white">
            Invalid Emails
          </p>
          <p class="text-xs text-slate-500 dark:text-slate-400">15% - 8,640</p>
        </div>
      </div>
    </div>
    <div class="absolute z-20 -bottom-8 -left-4 lg:-left-16 animate-float-normal">
      <div class="glass-card p-4 rounded-xl shadow-xl flex items-center gap-3">
        <div
          class="w-10 h-10 flex items-center justify-center bg-red-100 dark:bg-red-900/50 rounded-lg"
        >
          <span class="text-xl font-bold text-red-600 dark:text-red-400"
            >5%</span
          >
        </div>
        <div>
          <p class="font-semibold text-slate-800 dark:text-white">
            Catch-All Emails
          </p>
          <p class="text-xs text-slate-500 dark:text-slate-400">5% - 2,880</p>
        </div>
      </div>
    </div>
    <div class="absolute z-20 bottom-8 -right-8 lg:-right-20 animate-float-slow">
      <div class="glass-card p-4 rounded-xl shadow-xl">
        <div class="flex items-center gap-3">
          <div class="relative w-16 h-16">
            <svg class="w-full h-full" viewBox="0 0 36 36"
              ><path
                class="text-slate-200 dark:text-slate-700"
                d="M18 2.0845 a 15.9155 15.9155 0 0 1 0 31.831 a 15.9155 15.9155 0 0 1 0 -31.831"
                fill="none"
                stroke="currentColor"
                stroke-width="3"></path><path
                class="text-yellow-500"
                d="M18 2.0845 a 15.9155 15.9155 0 0 1 0 31.831 a 15.9155 15.9155 0 0 1 0 -31.831"
                fill="none"
                stroke="currentColor"
                stroke-dasharray="80, 100"
                stroke-linecap="round"
                stroke-width="3"></path></svg
            >
            <span
              class="absolute inset-0 flex items-center justify-center text-xl font-bold text-slate-800 dark:text-white"
              >80%</span
            >
          </div>
          <div>
            <p class="font-semibold text-slate-800 dark:text-white">
              Valid Emails
            </p>
            <p class="text-xs text-slate-500 dark:text-slate-400">80% - 8,640</p>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>