---
import { Image } from "astro:assets";
---

<header
  class="sticky top-0 z-40 bg-background-light/80 dark:bg-background-dark/80 backdrop-blur-lg border-b border-slate-200 dark:border-slate-800"
>
  <div class="container mx-auto px-6 py-4 flex justify-between items-center">
    <a
      class="flex items-center gap-2 text-xl font-bold font-display text-slate-800 dark:text-white"
      href="#"
    >
      <svg
        class="w-8 h-8 text-primary"
        fill="none"
        viewBox="0 0 24 24"
        xmlns="http://www.w3.org/2000/svg"
      >
        <path
          d="M4 7L10.94 12.33C11.59 12.83 12.41 12.83 13.06 12.33L20 7M5 18H19C20.1 18 21 17.1 21 16V8C21 6.9 20.1 6 19 6H5C3.9 6 3 6.9 3 8V16C3 17.1 3.9 18 5 18Z"
          stroke="currentColor"
          stroke-linecap="round"
          stroke-linejoin="round"
          stroke-width="2"></path>
        <path
          d="M15.5 10.5L19.5 7.5"
          stroke="currentColor"
          stroke-linecap="round"
          stroke-linejoin="round"
          stroke-width="2"></path>
        <path
          d="M8.5 10.5L4.5 7.5"
          stroke="currentColor"
          stroke-linecap="round"
          stroke-linejoin="round"
          stroke-width="2"></path>
      </svg>
      <span>Email Verifier</span>
    </a>
    <nav
      class="hidden md:flex items-center gap-8 text-sm font-medium text-slate-600 dark:text-slate-300"
    >
      <a
        class="hover:text-primary dark:hover:text-white transition-colors flex items-center gap-1"
        href="#"
        >Features <span class="material-symbols-outlined text-base"
          >expand_more</span
        ></a
      >
      <a class="hover:text-primary dark:hover:text-white transition-colors" href="#"
        >Pricing</a
      >
    </nav>
    <div class="flex items-center gap-4">
      <a
        class="hidden md:block text-sm font-medium text-slate-600 dark:text-slate-300 hover:text-primary dark:hover:text-white transition-colors"
        href="#">Log In</a
      >
      <a
        class="bg-primary text-white px-5 py-2.5 rounded-lg text-sm font-semibold hover:opacity-90 transition-opacity shadow-md shadow-primary/20"
        href="#">Get Started for Free</a
      >
    </div>
  </div>
</header>